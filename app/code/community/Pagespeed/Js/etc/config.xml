<config>

    <modules>
        <Pagespeed_Js>
            <version>0.0.0.3</version>
        </Pagespeed_Js>
    </modules>

    <frontend>
        <events>
            <!--
                Event before the response has been sent to browser
            -->
            <controller_front_send_response_before>
                <observers>
                    <pagespeed_js_response_before>
                        <type>singleton</type>
                        <class>pagespeed_js/observer</class>
                        <method>parseJsToBottom</method>
                    </pagespeed_js_response_before>
                </observers>
            </controller_front_send_response_before>
        </events>
    </frontend>

    <global>
        <!--
            default class declarations
        -->
        <models>
            <pagespeed_js>
                <class>Pagespeed_Js_Model</class>
            </pagespeed_js>
        </models>
        <helpers>
            <pagespeed_js>
                <class>Pagespeed_Js_Helper</class>
            </pagespeed_js>
        </helpers>
    </global>

    <adminhtml>
        <!--
            config configuration permissions
        -->
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <pagespeed>
                                            <title>Pagespeed</title>
                                        </pagespeed>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <!--
            default configuration values
        -->
        <pagespeed>
            <js>
                <enabled>0</enabled>
                <exclude_enabled>1</exclude_enabled>
                <exclude><![CDATA[/(.*)pagespeed_no_defer(.*)/
]]></exclude>
                <exclude_actions><![CDATA[/firecheckout_(.*)/
]]></exclude_actions>
                <minify>1</minify>
            </js>
        </pagespeed>
    </default>

</config>